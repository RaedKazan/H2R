<div class="rio-promos">

    @for (int i = 0; i < Model.ElectricCigarets.Count; ++i)
    {
        var item = Model.ElectricCigarets[i];
        var image64 = System.Text.Encoding.UTF8.GetString(item.Image);
        var imgSrc = String.Format("data:image/jpeg;base64,/{0}", image64);


        <img src="@imgSrc" onclick="location.href='@Url.Action("ViewItemDetails", "Customer", new  {id=item.Id })'" />

    }
</div>

