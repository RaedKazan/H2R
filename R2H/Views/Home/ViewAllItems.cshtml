
@model ApplicationService.ViewModels.GetAllElectricCigaretViewModel
@{
    ViewData["Title"] = "ViewAllItems";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        img {
            width: 100%;
            border-radius: 20px;
        }

        @@media only screen and (min-width: 600px) {
            img {
              display:block;
              text-align:center;
            }
            
        }
    </style>
</head>


@using (Html.BeginForm("CreatItem", "Home"))
{
    <div class="container">
        <row>
            <div class="form-group row col-md-12">
                @for (int i = 0; i < Model.ElectricCigarets.Count; i++)
                {

                    var image64 = System.Text.Encoding.UTF8.GetString(Model.ElectricCigarets[i].Image);
                    var imgSrc = String.Format("data:image/jpeg;base64,/{0}", image64);
                    @Html.HiddenFor(c => c.ElectricCigarets[i].Id)
                    <div class="col-md-4" >
                        <a href="@Url.Action("GetItemById","Home",new {id=@Model.ElectricCigarets[i].Id})">
                            <img  src="@imgSrc" />
                        </a>
                        <br />
                        @Html.LabelFor(x => x.ElectricCigarets[i].Name)
                        @Html.DisplayFor(x => x.ElectricCigarets[i].Name)
                        <br />
                        @Html.DisplayNameFor(x => x.ElectricCigarets[i].SellingPrice)
                        @Html.DisplayFor(x => x.ElectricCigarets[i].SellingPrice, new { @class = "form-control" })
                    </div>

                } @*End for*@
            </div>
        </row>
    </div>
}





