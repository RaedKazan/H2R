
@using ApplicationService.ViewModels
@model ApplicationService.ViewModels.AddLookUpViewModel

@{
    ViewData["Title"] = "AddLookUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .check1 {
            width: 22px;
            margin-left: 10px;
        }

        .check2 {
            width: 22px;
            margin-left: 5px;
        }
    </style>
</head>
<h1>AddLookUp</h1>

@using (Html.BeginForm("CreateLookUp", "LookUp"))
{

    @Html.HiddenFor(c => c.TypeId)

    <div class="col-md-6">
        <div class="Error form-control text-danger" style="display:none;"> @ViewBag.SuccessMessage </div>
    </div>
    <fieldset>
        <row>
            <div class="col-md-6">
                <div class="Error form-control text-danger" style="display:none;"> @ViewBag.ErrorMassag </div>
            </div>
            <div class="col-md-12">


                <div class="form-group row col-md-12">


                </div>

                <div class="form-group row col-md-12">
                    <div class="col-md-1">

                        @Html.DisplayNameFor(x => x.Brand)
                        <div class="check1">
                            @Html.CheckBoxFor(x => x.Brand.Value, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.Brand, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-md-1">
                        @Html.DisplayNameFor(x => x.Category)
                        <div class="check2">
                            @Html.CheckBoxFor(x => x.Category.Value, new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.Category, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayNameFor(x => x.Description)
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @Required = "Required" })
                        @Html.ValidationMessageFor(c => c.Description, "", new { @class = "text-danger" })

                    </div>



                </div>

            </div>

        </row>

    </fieldset>
    <button type="submit" class="btn btn-primary" value="submit">حفظ</button>

}



<script src="~/lib/jquery/dist/jquery.js" type='text/javascript'></script>
<script src="~/lib/jquery/dist/jquery.min.js" type='text/javascript'></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js" type='text/javascript'></script>
<script src="~/lib/jquery-validation/dist/additional-methods.js" type='text/javascript'></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type='text/javascript'></script>





<script>

          $(document).ready(function () {
              var errorMassag = '@ViewBag.SuccessMessage';
              debugger
            if ( errorMassag != "")
            {

                $(".Error").show().delay(5000).fadeOut();
            }
        });
</script>

